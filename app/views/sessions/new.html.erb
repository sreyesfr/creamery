<fieldset>
<legend><h4><b>Log In</b></h4></legend>

<%= form_tag sessions_path do %>

	<div class="control-group">
    <%= label_tag :email %>
    <div class="controls">
      <%= text_field_tag :email, params[:email] %>
    </div>
  </div>

	<div class="control-group">
    <%= label_tag :password %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <div class="actions"><%= submit_tag "Log In", :class => "button" %></div>
<% end %>
</fieldset>