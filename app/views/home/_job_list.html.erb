<div id="job_list">
  <% if @jobs.empty? %>
    <p><em>There are no current jobs at this time.</em></p>
  <% else %>
    <h4><b>Jobs</b></h4>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |f| %>   
          <tr>
            <td><%= f.name %></td>
            <td><%= f.description %></td>
            <% if !f.active %>
              <td>
                <%= link_to 'Activate', edit_job_path(f, status: "make_active") %>
              </td>
            <% else %>
              <td>
                <%= link_to 'Deactivate', edit_job_path(f, status: "make_inactive") %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%# will_paginate @jobs, :param_name => "jobs", :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  <% end %>
</div>