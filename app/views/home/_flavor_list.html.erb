<% if @flavors.empty? %>
  <p><em>There are no current flavors at this time.</em></p>
<% else %>
  <h4><b>Flavors</b></h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @flavors.each do |f| %>   
        <tr>
          <td><%= f.name %></td>
          <% if !f.active %>
            <td>
              <%= link_to 'Activate', edit_flavor_path(f, status: "make_active") %>
            </td>
          <% else %>
            <td>
              <%= link_to 'Dectivate', edit_flavor_path(f, status: "make_inactive") %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @flavors, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
<% end %>
