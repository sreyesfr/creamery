<br \>
<div class="row">
  <div class="small-6 columns">
    <%= render partial: "employee_details" %>
    <br \>
    <% if can? :update, @employee and !current_user.employee.role? :admin %>
      <%= link_to edit_employee_path(current_user.employee) , class: 'button' do%>
      &nbsp;<%= "Edit My Info" %>
      <% end %>
    <% end %>
  </div>

  <div class="small-6 columns">
    <%= render partial: "assignment_history" unless @assignments.empty?%>
    <%= render partial: "shift_history" unless @past_shifts.empty?%>
  </div>
</div>

<div class="row">
  <% if current_user.employee.role? :admin %>
    <!-- Add buttons to list all, edit project or destroy object -->
    <%= render partial: "partials/object_options", locals: {model_name: "employee", object: @employee}  %>
  <% end %>
</div>