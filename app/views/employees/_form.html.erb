<%= simple_nested_form_for @employee, :html => { :class => 'form-horizontal' } do |employee_form| %>
  <div class="row">
    <div class="span7">
      <fieldset>
        <legend><%= controller.action_name.capitalize %> Employee</legend>
        <%= render :partial => "employee_fields", :locals => { :f => employee_form } %>
        <div class="span5">
          <div id="employee_user">
            <%= employee_form.simple_fields_for :user do |user_form| %>
              <%= render :partial => "user_fields", :locals => { :f => user_form } %>
            <% end %> 
          </div> 
        </div>
        <div class="form-actions">
          <%= employee_form.submit nil, :class => 'button' %>
          <% if current_user.employee.role? :employee or current_user.employee.role? :manager%>
            <%= link_to 'Cancel', employee_path(current_user.employee), :class => 'button secondary' %>
          <% else %>
            <%= link_to 'Cancel', employees_path, :class => 'button secondary' %>
          <% end %>
        </div>
      </fieldset>
    </div>
  </div>
<% end %>