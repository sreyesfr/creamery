<div class="row">
  <div class="small-12 columns">
    <!-- primary partial gets displayed here in main div -->
    <%= render partial: "#{primary}" %>
    <!-- sometimes we want another partial below -->
    <% unless secondary.nil? %>
      <p>&nbsp;</p>
      <%= render partial: "#{secondary}" %>
    <% end %>
    
  </div>
  
</div>

<!-- Add a button for new instances of object -->
<% if can? :create, "#{model_name}".capitalize %>
  <%= link_to(eval("new_#{model_name}_path"), class: "button") do %>
    <!-- <i class="fa fa-plus"></i> -->
    &nbsp;Add a New <%= model_name.capitalize %>
  <% end %>
<% end %>